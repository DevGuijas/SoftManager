<%- include('partials/header') %>

    <h1>Visão Geral</h1>
    
    <div class="cards">
        <div class="card">
            <h3>Clientes Ativos</h3>
            <p><%= totalClientes %></p>
        </div>
        <div class="card">
            <h3>Projetos em Andamento</h3>
            <p><%= totalProjetos %></p>
        </div>
        <div class="card">
            <h3>Receita Mensal (Est.)</h3>
            <p>R$ 0,00</p>
        </div>
    </div>

    <h2>Projetos Recentes</h2>
    <table>
        <thead>
            <tr>
                <th>Projeto</th>
                <th>Cliente</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <% if(projetos.length > 0) { %>
                <% projetos.forEach(function(p) { %>
                    <tr>
                        <td><%= p.projeto %></td>
                        <td><%= p.cliente %></td>
                        <td><span style="color: green;">●</span> <%= p.status %></td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr><td colspan="3">Nenhum projeto encontrado.</td></tr>
            <% } %>
        </tbody>
    </table>

<%- include('partials/footer') %>